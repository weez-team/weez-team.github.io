main .portfolio-mainpage
	// background-color color-bg
	background transparent url(../img/header/bg-4.png) 0 0 repeat
	background-position center
	background-attachment fixed
	padding 60px 0

	h2
		margin-bottom 60px
		text-align center
		color #fff

	.latest,
	.latest img
		width 100%
		height auto

	.columns
		margin 0 -15px

		.case
			display block
			max-width 360px
			margin 0 auto 30px
			background-color #fff
			box-shadow 0 0 10px 0 alpha(color-portfolio-title, 0.8)

			&:hover
				text-decoration none

			.work
				height auto
				max-height 480px
				overflow hidden
				position relative
				
				&:after
					content ''
					display block
					width 100%
					height 100px
					background linear-gradient(to bottom, transparent, color-portfolio-title)
					position absolute
					bottom 0
				
				img
					width 100%
					
			.title
				height 48px
				margin 0
				padding 0
				text-decoration none
				text-align center
				font-size 14px
				line-height 48px
				vertical-align middle
				overflow hidden
				background-color color-portfolio-title
				color #fff
				
				&:hover
					text-decoration underline