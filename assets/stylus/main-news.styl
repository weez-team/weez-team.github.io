main .news
	
	.articles
		height 440px
		overflow hidden

	article
		max-width 380px
		height 420px
		margin 0 auto 20px

		.image
			position relative

		time
			display block
			width 60px
			height 70px
			// background #75e4d2
			background color-main
			color #fff
			text-align center
			position absolute
			bottom 10px
			left -10px

			.day
				font-size 26px
				line-height 50px
				vertical-align bottom
				font-weight bold

			.month
				font-size 16px
				line-height 0
				font-style italic
				font-weight normal

		.image
			display block

			img
				width auto
				height auto
				max-width 100%
				max-height 240px

		.title
			display block
			height 2.4em
			margin 20px 0 15px
			text-transform uppercase
			font-size 14px
			font-weight normal
			line-height 1.2
			letter-spacing 0.2px
			color #111
			overflow hidden

		.annotation
			height 3.6em
			font-size 14px
			line-height 1.2
			color #888
			overflow hidden

		hr
			display block
			width 100%
			height 0
			margin 20px 0 0 0
			padding 0
			border none
			border-bottom 1px solid #e7e6e3

		.views,
		.reviews
			display inline-block
			margin 15px 10px 0 0
			background transparent url() 0 0 no-repeat
			background-size 28px 28px
			background-position left
			font-size 14px
			line-height 28px
			vertical-align middle
			color #999

			&:hover,
			&:hover
				text-decoration none
				color color-active

			.fa,
			.fa
				font-size 16px
				color #3aa9c9
				margin 0 5px 0 0

			&:hover .fa,
			&:hover .fa
				color color-active