main .blog
	
	h2
		text-align left

	article
		margin 15px 0 30px

		.date
			display block
			width 100px
			height 36px
			background-color color-main
			text-align center
			transition-duration 400ms
			transition-property background-color
			position relative
			z-index 1
			float right

			span
				color #fff
				font-size 16px
				line-height 36px
				vertical-align middle
				text-shadow 0 0 0.01px

			&:before,
			&:after
				content ''
				display block
				width 0
				height 0
				border-top 18px solid transparent
				border-right 18px solid color-main
				border-bottom 18px solid transparent
				position absolute
				left -18px
				transition-duration 400ms
				transition-property border-color

			&:before
				border-top 0 solid transparent
				top 0

			&:after
				border-bottom 0 solid transparent
				bottom 0

			&:active,
			&:focus,
			&:hover
				background-color color-active
				text-decoration none

			&:active:before,
			&:active:after,
			&:focus:before,
			&:focus:after,
			&:hover:before,
			&:hover:after
				border-right 18px solid color-active

		img
			width auto
			height auto
			max-width 100%
			max-height 100%

		.title
			display block
			height 3.6em
			margin 0 0 15px
			padding 0
			color #111
			text-decoration none
			font-size 14px
			line-height 1.2
			letter-spacing 0.2px
			text-transform uppercase
			text-shadow 0 0 0.01px
			overflow hidden

			&:active,
			&:focus,
			&:hover
				color #111
				text-decoration underline

		.annotation
			display block
			height 6.3em
			font-size 14px
			line-height 1.3
			color #888
			overflow hidden

		.button
			width 50%
			height 44px
			margin 25px auto 15px auto
			line-height 44px

	.pagination
		margin 30px auto
		text-align center

		a
			display inline-block
			width 48px
			padding 5px 10px
			font-size 16px
			color #888
			border-top 4px solid transparent
			transition-duration 400ms
			transition-property background-color, border-color

			&.active,
			&.active:active,
			&.active:focus,
			&.active:hover
				border-top 4px solid color-main
				background-color #f9f9f9

			&:active,
			&:focus,
			&:hover
				border-top 4px solid color-active
				background-color #f9f9f9
				text-decoration none